<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        tools:context="cl.nationforce.lolcillo.PantallaPrincipal$PlaceholderFragment"
        android:id="@+id/rl">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fondoperfilimageViewf"
            android:background="@drawable/perfilbg"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#40d0d0d0"
            android:layout_marginTop="10dp"
            android:id="@+id/relativeLayout">

            <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/usuarioPrincipalTextView"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:autoText="false"
                android:textColor="#ffb53312"
                android:layout_below="@+id/section_label"
                android:layout_toRightOf="@+id/usuarioIconoImageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/levelUsuarioTextView"
                android:textColor="#fff8f4ff"
                android:textSize="@dimen/abc_text_size_title_material_toolbar"
                android:layout_below="@+id/usuarioPrincipalTextView"
                android:layout_alignLeft="@+id/usuarioPrincipalTextView"
                android:layout_alignStart="@+id/usuarioPrincipalTextView" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/usuarioIconoImageView"
                android:paddingLeft="0dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/section_label"
                android:layout_toEndOf="@+id/section_label"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#40d0d0d0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranked 3v3"
                android:id="@+id/ranked3v3TextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#fff8f4ff"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#ff171717" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
